{
  "name": "io.cordova.hellocordova",
  "displayName": "HelloCordova",
  "version": "1.0.0",
  "description": "A sample Apache Cordova application that responds to the deviceready event.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "react-scripts start",
    "start:android": "npm run build:android && cordova run android",
    "build:browser": "react-scripts build",
    "prebuild:android": "react-scripts build && node ./scripts/copy build/ www/",
    "build:android": "npm run prebuild:android && cordova build android",
    "watch:android": "watch 'npm run start:android' ./src"
  },
  "keywords": [
    "ecosystem:cordova"
  ],
  "author": "Apache Cordova Team",
  "license": "Apache-2.0",
  "dependencies": {
    "concurrently": "^7.2.0",
    "cross-env": "^7.0.3",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-hook-form": "^7.31.1",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^6.0.1",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "@appcominteractive/cordova-plugin-hot-reload": "^0.2.4",
    "cordova-android": "^10.1.2"
  },
  "cordova": {
    "platforms": [
      "android"
    ],
    "plugins": {
      "@appcominteractive/cordova-plugin-hot-reload": {}
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
